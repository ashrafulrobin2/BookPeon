<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <include
            layout="@layout/toolbar_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dip"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/lin_home_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="Name"
                        android:textColor="@color/grey_800"/>

                    <TextView
                        android:textSize="12.0dip"
                        android:textStyle="bold"
                        android:textColor="#ffff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dip"
                        android:text="*"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:singleLine="true" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_project_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/edit_login_background"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_500" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="Email"
                        android:textColor="@color/grey_800"/>

                <EditText
                    android:id="@+id/edt_direct_sell_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/edit_login_background"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_500" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="Mobile Number"
                        android:textColor="@color/grey_800"/>

                    <TextView
                        android:textSize="12.0dip"
                        android:textStyle="bold"
                        android:textColor="#ffff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dip"
                        android:text="*"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:singleLine="true" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_direct_sell_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/edit_login_background"
                    android:hint="Mobile Number"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_500" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="Address"
                        android:textColor="@color/grey_800"/>

                    <TextView
                        android:textSize="12.0dip"
                        android:textStyle="bold"
                        android:textColor="#ffff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dip"
                        android:text="*"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:singleLine="true" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_direct_sell_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/edit_login_background"
                    android:hint="Address"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_500" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="Quantity"
                        android:textColor="@color/grey_800"/>

                    <TextView
                        android:textSize="12.0dip"
                        android:textStyle="bold"
                        android:textColor="#ffff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dip"
                        android:text="*"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginLeft="2dip"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_login_background"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2">

                    <Spinner
                        android:id="@+id/sp_project_district"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="@string/txt_terms_condiion"
                    android:textColor="@color/app_primary_color"
                    android:textSize="11sp"
                    app:buttonTint="@color/app_primary_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dp_15">


                    <Button
                        android:id="@+id/btn_product_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_blue_button"
                        android:text="Order Submit"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/small_font_size" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</RelativeLayout>
