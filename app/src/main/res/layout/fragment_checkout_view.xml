<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dip"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/lin_home_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:layout_margin="@dimen/dp_15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="@drawable/shape_border_blue">

                    <EditText
                        android:id="@+id/et_user_pass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="@dimen/dp_7"
                        android:drawablePadding="@dimen/dp_2"
                        android:drawableLeft="@drawable/vector_ic_visa_card"
                        android:drawableRight="@drawable/vector_ic_arrow_down"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="@dimen/sp_15"
                        android:focusable="false" />


                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1.2dp"
                android:background="@drawable/shape_border_blue"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".6"
                            android:background="@null"
                            android:padding="@dimen/dp_7"
                            android:text="Hozrot Belal"
                            android:textColor="@color/app_same_primary_color"
                            android:textColorHint="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".4"
                            android:gravity="right"
                            android:text="CARDHOLDER NAME"
                            android:textAllCaps="true"
                            android:textColor="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/app_same_primary_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".6"
                            android:background="@null"
                            android:padding="@dimen/dp_7"
                            android:inputType="number"
                            android:text="4242424242424242"
                            android:textColor="@color/app_same_primary_color"
                            android:textColorHint="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".4"
                            android:text="CARD NUMBER"
                            android:gravity="right"
                            android:textAllCaps="true"
                            android:textColor="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/app_same_primary_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".6"
                            android:background="@null"
                            android:padding="@dimen/dp_7"
                            android:text="18/12"
                            android:textColor="@color/app_same_primary_color"
                            android:textColorHint="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".4"
                            android:text="EXPIRE DATE"
                            android:gravity="right"
                            android:textAllCaps="true"
                            android:textColor="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/app_same_primary_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".6"
                            android:background="@null"
                            android:padding="@dimen/dp_7"
                            android:text="123"
                            android:textColor="@color/app_same_primary_color"
                            android:textColorHint="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".4"
                            android:text="CVV"
                            android:gravity="right"
                            android:textAllCaps="true"
                            android:textColor="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/app_same_primary_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dp_10"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".6"
                            android:background="@null"
                            android:padding="@dimen/dp_7"
                            android:text="Mohammadpur"
                            android:textColor="@color/app_same_primary_color"
                            android:textColorHint="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".4"
                            android:text="ADDRESS"
                            android:gravity="right"
                            android:textAllCaps="true"
                            android:textColor="@color/app_same_primary_color"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_product_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_blue_button"
                        android:text="Process Payment"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/small_font_size" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</LinearLayout>
