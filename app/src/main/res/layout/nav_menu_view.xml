<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_7">


            <LinearLayout
                android:id="@+id/ll_menu_category"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/drawer_icon"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_3"
                    android:padding="@dimen/dp_2"
                    app:srcCompat="@drawable/vector_ic_category_grey" />

                <TextView
                    android:id="@+id/tv_drawer_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="Category"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_wishlist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:padding="@dimen/dp_2"
                    app:srcCompat="@drawable/vector_ic_wishlist_grey" />

                <TextView
                    android:id="@+id/tv_drawer_wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="Wislist"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_notification"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:padding="@dimen/dp_2"
                    app:srcCompat="@drawable/vector_notification_empty" />

                <TextView
                    android:id="@+id/tv_drawer_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="Notification"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_contact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:padding="@dimen/dp_2"
                    app:srcCompat="@drawable/vector_ic_contact_us" />

                <TextView
                    android:id="@+id/tv_drawer_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="Contact Us"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:padding="@dimen/dp_2"
                    app:srcCompat="@drawable/vector_ic_about_grey" />

                <TextView
                    android:id="@+id/tv_drawer_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="About Us"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <!--
                        <LinearLayout
                            android:id="@+id/ll_menu_logout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:padding="@dimen/dp_2"
                                app:srcCompat="@drawable/vector_ic_logout" />

                            <TextView
                                android:id="@+id/tv_drawer_logout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="Log Out"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/grey_700"
                                android:textSize="@dimen/sp_20" />
                        </LinearLayout>
            -->


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_primary_color"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_10">


        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_2"
            app:srcCompat="@drawable/vector_ic_logout_white" />

        <TextView
            android:id="@+id/tv_drawer_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="Log Out"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</RelativeLayout>