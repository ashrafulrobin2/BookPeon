        <!--<item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>-->
    <!--</style>-->

    <style name="AppTheme.Action" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>

    </style>

    <style name="toolbar_base">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/toolbar_bg</item>
    </style>


    <!-- RippleStyle-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>


    <style name="NavigationViewStyle">
        <item name="android:textColor">#afafaf</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">50dp</item><!-- menu item height-->
    </style>

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <!--
                <item name="android:textColor">?attr/colorPrimary</item>
        -->
        <item name="colorControlNormal">@color/colorWhite</item>

        <item name="colorControlActivated">@color/colorWhite</item>

        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="bnve">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bnve_primary_bg" parent="bnve">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="bnve_white_bg" parent="bnve">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <!--RATING BAR STYLE -->
    <!-- SMALL -->
    <style name="RatingStar_Small" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_stars_small</item>
        <item name="android:indeterminateDrawable">@drawable/rating_stars_small</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    <!-- MEDIUM -->
    <style name="RatingStar_Medium" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_stars_medium</item>
        <item name="android:indeterminateDrawable">@drawable/rating_stars_medium</item>
        <item name="android:minHeight">26dip</item>
        <item name="android:maxHeight">26dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    <!-- BIG -->
    <style name="RatingStar_Big" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_stars_big</item>
        <item name="android:indeterminateDrawable">@drawable/rating_stars_big</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

</resources>
